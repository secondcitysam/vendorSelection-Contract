<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background_color"
    tools:context=".Fragments.ContractFrag">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"

            >

            <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/cid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/baloo"
                android:hint="Contract Id"
                android:inputType="number"

                android:padding="16dp">

            </EditText>

            <EditText
                android:id="@+id/cvid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/baloo"
                android:hint="Vendor Id"
                android:inputType="number"

                android:padding="16dp">

            </EditText>

            <EditText
                android:id="@+id/cuid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/baloo"
                android:hint="Your Id"
                android:inputType="number"

                android:padding="16dp">

            </EditText>

            <EditText
                android:id="@+id/ctype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/baloo"
                android:hint="Contract Type"
                android:inputType="text"

                android:padding="16dp">

            </EditText>

            <EditText
                android:id="@+id/csdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/baloo"
                android:hint="Contract Start Date"
                android:inputType="date"

                android:padding="16dp">

            </EditText>

            <EditText
                android:id="@+id/cedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/baloo"
                android:hint="Contract End Date"
                android:inputType="date"

                android:padding="16dp">

            </EditText>

            <EditText
                android:id="@+id/cvalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/baloo"
                android:hint="Contract Value"
                android:inputType="numberDecimal"

                android:padding="16dp">

            </EditText>

            <EditText
                android:id="@+id/cstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/baloo"
                android:hint="Contract Status"
                android:inputType="text"

                android:padding="16dp">

            </EditText>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="30dp"
                android:background="@drawable/buttonbg"

                android:fontFamily="@font/baloo"
                android:padding="16dp"
                android:text="ADD CONTRACT">

            </androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="30dp"
                android:background="@drawable/buttonbg"

                android:fontFamily="@font/baloo"
                android:padding="16dp"
                android:text="UPDATE CONTRACT">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="30dp"
                android:background="@drawable/buttonbg"

                android:fontFamily="@font/baloo"
                android:padding="16dp"
                android:text="DELETE CONTRACT">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </FrameLayout>


</ScrollView>